{
    "editor.rulers": [80, 100, 120],

    "pylint.enabled": true,
    "pylint.cwd": "${workspaceFolder}",

    "black-formatter.cwd": "${workspaceFolder}",
    "editor.formatOnSave": true,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.venv": true,
        "**/.pdm-python": true,
        "**/__pycache__": true,
    },
}